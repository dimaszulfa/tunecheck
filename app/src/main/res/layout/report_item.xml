<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/cardPaketItem"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primaryApp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:padding="12dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardCornerRadius="8dp"
            android:id="@+id/cardViewWisata"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="10dp">
        <ImageView
            android:id="@+id/imageWisataItem"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            />
        </androidx.cardview.widget.CardView>
        
            <LinearLayout
                android:layout_marginStart="13dp"
                app:layout_constraintStart_toEndOf="@id/cardViewWisata"
                android:layout_width="0dp"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textAlignment="textStart"
                    android:text="Paket 1"
                    android:textColor="@color/primaryApp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/tvPaketNameItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textAlignment="textStart"
                    android:text="Penginapan 2 hari 2 malam\nOne Day Full Learning sebanyak 10 porsi\nBebas masuk wisata Taman Reptil Adi Luhur, Sen.... "
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"
                    android:id="@+id/tvSubPaketItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Button
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:id="@+id/btnReadMore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="Baca Selengkapnya" />



            </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>
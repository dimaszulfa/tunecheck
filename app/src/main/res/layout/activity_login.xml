<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/primaryApp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".auth.LoginActivity">

    <ImageView
        android:id="@+id/ivLogin"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="200dp"
        android:src="@drawable/cnr"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="200dp"/>


    <TextView
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/ivLogin"
        android:text="Login"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="32sp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        android:id="@+id/tvLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/inputLayoutSignIn"
        app:layout_constraintTop_toBottomOf="@id/tvLogin"
        android:text="Sign in to continue."
        android:id="@+id/tvSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvSignIn"
        app:layout_constraintStart_toStartOf="@id/tvSignIn"
        android:id="@+id/inputLayoutSignIn"
        app:layout_constraintBottom_toTopOf="@id/inputLayoutPassword"
        android:layout_width="match_parent"
        app:layout_constraintEnd_toEndOf="@id/tvSignIn"
        android:hint="Username"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayoutPassword"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toTopOf="@id/btnLogin"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="@id/inputLayoutSignIn"
        app:layout_constraintEnd_toEndOf="@id/inputLayoutSignIn"
        app:layout_constraintTop_toBottomOf="@id/inputLayoutSignIn"
        android:layout_width="match_parent"
        android:hint="Password"
        android:singleLine="true"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPassword"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/inputLayoutPassword"
        app:layout_constraintEnd_toEndOf="@id/inputLayoutPassword"
        app:layout_constraintTop_toBottomOf="@id/inputLayoutPassword"
        android:id="@+id/btnLogin"
        android:text="Sign In"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"/>

    <TextView
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Donâ€™t have an account? Sign Up."
        android:id="@+id/tvRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>

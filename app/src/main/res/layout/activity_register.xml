<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/primaryApp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="48dp"
    android:layout_gravity="center"
    tools:context=".auth.RegisterActivity">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="textStart"
        android:text="Register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="32sp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="60dp"
        android:id="@+id/tvRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    
    <LinearLayout
        android:id="@+id/name"
        app:layout_constraintTop_toBottomOf="@id/tvRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="16dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="First Name"
                android:layout_height="wrap_content"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etFirstName"
                android:layout_height="40dp"
                android:maxLines="1"
                android:singleLine="true"
                style="@style/WhiteTextInputEditTextStyle"

                android:layout_width="match_parent"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Last Name"
                android:layout_height="wrap_content"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etLastName"
                android:layout_height="40dp"
                android:maxLines="1"
                android:singleLine="true"

                style="@style/WhiteTextInputEditTextStyle"

                android:layout_width="match_parent"
                />
        </LinearLayout>


    </LinearLayout>




        <TextView
            android:id="@+id/lbusername"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name"
            android:layout_width="match_parent"
            android:text="Username"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etUsername"
            style="@style/WhiteTextInputEditTextStyle"
            app:layout_constraintTop_toBottomOf="@id/lbusername"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:maxLines="1"
            android:singleLine="true"

            android:layout_width="match_parent"
            />


    <TextView
        android:id="@+id/lbemail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etUsername"
        android:layout_width="match_parent"
        android:text="Email"
        android:layout_height="wrap_content"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etEmail"
        app:layout_constraintTop_toBottomOf="@id/lbemail"
        android:layout_height="40dp"
        style="@style/WhiteTextInputEditTextStyle"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_width="match_parent"
        />

    <TextView
        android:id="@+id/lbPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        android:layout_width="match_parent"
        android:text="Password"
        android:layout_height="wrap_content"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etPassword"
        app:layout_constraintTop_toBottomOf="@id/lbPassword"
        android:layout_height="40dp"
        style="@style/WhiteTextInputEditTextStyle"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_width="match_parent"
        />

    <LinearLayout
        android:id="@+id/termsandLogin"
        app:layout_constraintTop_toBottomOf="@id/etPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="2.0"
            android:layout_width="0dp"
            android:text="By signing up, you agree to our
            terms of service and privacy police."
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@id/inputLayoutPassword"
            app:layout_constraintEnd_toEndOf="@id/inputLayoutPassword"
            app:layout_constraintTop_toBottomOf="@id/inputLayoutPassword"
            android:id="@+id/btnLogin"

            android:text="Sign In"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <TextView
        android:layout_marginTop="80dp"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Have an account? Login."
        android:id="@+id/tvLogin"
        app:layout_constraintTop_toBottomOf="@id/termsandLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>

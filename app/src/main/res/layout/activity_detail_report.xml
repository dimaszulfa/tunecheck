<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/primaryApp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailReportActivity">

    <include
        layout="@layout/toolbar_layout"/>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="70dp"
        android:layout_marginBottom="70dp"
        app:cardCornerRadius="10dp"
        android:layout_marginHorizontal="24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:paddingHorizontal="27dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_marginTop="25dp"
                android:textStyle="bold"
                android:textSize="32sp"
                android:textColor="#61A3BA"
                android:textAlignment="center"
                android:text="Detail Laporan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginBottom="47dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
    
                    <ImageView
                        android:src="@drawable/avatar_image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>
                    
                    <LinearLayout
                        android:layout_marginStart="12dp"

                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Rania677"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:id="@+id/tvUsername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/baseline_access_time_24"
                                android:layout_width="24dp"
                                android:layout_height="24dp"/>
                            <TextView
                                android:id="@+id/tvDateDetail"
                                android:text="Dilaporkan menit yang lalu"
                                android:textColor="#C4C4C4"
                                android:textStyle="bold"
                                android:textSize="15sp"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                    </LinearLayout>
                    
                </LinearLayout>

                <TextView
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:text="Detail Laporan"
                    android:layout_marginBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/ivImageDetailLaporan"
                    android:layout_width="250dp"
                    android:src="@drawable/motor"
                    android:scaleType="fitXY"
                    android:layout_height="200dp"/>

                <TextView
                    android:layout_marginTop="16dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textAlignment="textStart"
                    android:text="Isi Laporan"
                    android:layout_marginBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:background="@drawable/edit_text_outline"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:inputType="none"
                    android:id="@+id/tvIsiLaporan"
                    android:text="Ada Kecelakaan di jalan menteng timur"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Button
                    android:layout_gravity="end"
                    android:backgroundTint="#007BE5"
                    android:paddingVertical="20dp"
                    android:textColor="@color/white"
                    android:paddingHorizontal="40dp"
                    android:id="@+id/btnVerif"
                    android:text="Verifikasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            </ScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
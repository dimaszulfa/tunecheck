<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/primaryApp"
        android:layout_height="match_parent">

        <include
            layout="@layout/toolbar_layout"/>
        <TextView
            android:layout_width="match_parent"
            android:textColor="#FFFFDD"
            android:textSize="20sp"
            android:layout_marginTop="53dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="24dp"
            android:text="Selamat Datang, Admin"
            android:layout_height="wrap_content"/>

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    app:cardCornerRadius="50dp"

    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:paddingHorizontal="45dp"
        android:paddingVertical="35dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.github.aachartmodel.aainfographics.aachartcreator.AAChartView
        android:id="@+id/aa_chart_view"
        android:layout_width="match_parent"
        android:layout_height="280dp">

    </com.github.aachartmodel.aainfographics.aachartcreator.AAChartView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/primaryApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Total Users"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvTotalUser"
                android:layout_width="wrap_content"
                android:text="100"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/primaryApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Jumlah Pelaporan"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvJumlahPelaporan"
                android:layout_width="wrap_content"
                android:text="100"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"

        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/primaryApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Sudah Terverifikasi"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvJumlahVerifikasi"
                android:layout_width="wrap_content"
                android:text="100"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.cardview.widget.CardView>
    </LinearLayout>


</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="14dp"
    android:paddingVertical="8dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <ImageView
            android:layout_marginEnd="8dp"
            android:src="@drawable/avatar_image"
            android:layout_width="51dp"
            android:layout_height="40dp"/>
        <LinearLayout
            android:layout_width="160dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvUsername"
                android:text="Rania677"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textStyle="bold"
                android:id="@+id/tvDescReport"
                android:text="Ada kecelakaan di jalan Menteng Timur xxxx"
                android:textColor="@color/primaryApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            android:id="@+id/cvVerif"
           android:layout_gravity="center_vertical"
            app:cardBackgroundColor="#FF0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:text="Belum Terverifikasi"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:id="@+id/tvVerif"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

